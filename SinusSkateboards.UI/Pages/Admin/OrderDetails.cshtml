@page
@model SinusSkateboards.UI.Pages.Admin.OrderDetailsModel
@{
}


<div>
    
    <dl class="row">
        <dt class="col-sm-2">
            First Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.LastName)
        </dd>
        <dt class="col-sm-2">
            Address:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.Address)
        </dd>
        <dt class="col-sm-2">
            Phone Number:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            City:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.City)
        </dd>
        <dt class="col-sm-2">
            Postal Code:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.PostalCode)
        </dd>
        <dt class="col-sm-2">
            Products ordered:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Cart.CartProduct.Count)
        </dd>
        <dt class="col-sm-2">
            Total Price:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Price) kr
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Cart.CartProduct[0].Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Cart.CartProduct[0].Product.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Cart.CartProduct[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Cart.CartProduct[0].Product.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order.Cart.CartProduct)
        {
        <tr>
            <td>
                <img src="~/images/@item.Product.PhotoName" height="40" alt="@item.Product.PhotoName" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td></td>
        </tr>
        }
    </tbody>
</table>