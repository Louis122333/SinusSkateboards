@page
@model SinusSkateboards.UI.Pages.Home.IndexModel
@{
}

<form>
        <select asp-for="Category" asp-items="Model.Category">
            <option value="">-- All categories --</option>
        </select>

        <input type="text" name="searchString" placeholder="Search..." />
        <input type="submit" value="Filter" />
</form>

@if (Model.Product.Count == 0)
    {
    <div class="text-center text-danger">
        <h1>No products found</h1>
        <img class="rounded-circle" src="~/images/travolta.png" />

    </div>
   

    }
    else
    {
            <h1 class="text-center">Products</h1>
    }

<hr />
<div class="card-columns">

    @foreach (var item in Model.Product)
    {

        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/Images/@item.PhotoName" alt="@item.PhotoName">
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                <p class="card-text font-italic">@Html.DisplayFor(modelItem => item.Description)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Color)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Price) kr</p>


                <a asp-page="cart" asp-page-handler="buy" asp-route-id="@item.Id" class="btn btn-success">Buy</a>
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </div>

        </div>

    }

</div>
